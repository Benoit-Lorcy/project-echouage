{% extends "layout.html.twig" %}

{% block title %}Data{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/data.css") }}">
{% endblock %}

{% block main %}
    <h1>Echouages pour {{ espece }}</h1>
    <section id="tables">
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    {% for zone in zones %}
                        <th>{{ zone }}</td>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for date, data in echouages %}
                    <tr>
                        <th>{{ date }}</th>
                        {% for zone in zones %}
                            <td>{{ data[zone.getId()] }}</td>
                        {% endfor %}
                    </tr>
                {% else %}
                    <tr>
                        <td>---</td>
                        <td>Aucun enregistrements</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>Zone</th>
                    <th>Min</th>
                    <th>Max</th>
                    <th>Moyenne</th>
                </tr>
            </thead>
            <tbody>
                {% for zone in zones %}
                    <tr>
                        <td>{{ zone }}</td>
                        <td>{{ summary_data[zone.getId()]["min"] }}</td>
                        <td>{{ summary_data[zone.getId()]["max"] }}</td>
                        <td>{{ summary_data[zone.getId()]["avg"]|number_format(2, ",", " ") }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
