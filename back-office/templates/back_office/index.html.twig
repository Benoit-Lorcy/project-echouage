{% extends "layout.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/back-office.css") }}">
{% endblock %}

{% block main %}
    <form action="/back-office/show_data" id="search">
        <label for="espece">Esp√®ce</label>
        <select name="espece" id="espece-select" class="field" type="text">
            {% for espece in especes %}
                <option value="{{ espece.id }}">{{ espece.espece }}</option>
            {% endfor %}
        </select>

        <label for="zone">Zone</label>
        <select name="zone" id="zone-select" class="field" type="text" placeholder="hello">
            <option value="all" selected>Toute</option>
            {% for zone in zones %}
                <option value="{{ zone.id }}">{{ zone.zone }}</option>
            {% endfor %}
        </select>

        <input name="take_no_entry_into_account" value="0" style="display: none;">

        <input type="submit" value="Rechercher" />
    </form>
{% endblock %}
