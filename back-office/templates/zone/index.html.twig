{% extends "layout.html.twig" %}

{% block title %}Zone index{% endblock %}

{% block main %}
    <h1>Zone index</h1>

    <a class="create-new" href="{{ path('zone_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Zone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tmain>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.id }}</td>
                <td>{{ zone.zone }}</td>
                <td>
                    <a href="{{ path('zone_show', {'id': zone.id}) }}">show</a>
                    <a href="{{ path('zone_edit', {'id': zone.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tmain>
    </table>
{% endblock %}
